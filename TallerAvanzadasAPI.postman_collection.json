{
  "info": {
    "name": "Taller Avanzadas API",
    "description": "Colección de endpoints para APIGateway y APIEmpleados",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Empleados",
      "item": [
        {
          "name": "Obtener todos los empleados",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/empleados",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["empleados"]
            }
          },
          "response": []
        },
        {
          "name": "Obtener empleado por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/empleados/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["empleados", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Crear empleado",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"email\": \"juan.perez@example.com\",\n  \"cargo\": \"Desarrollador\",\n  \"salario\": 50000,\n  \"fechaContratacion\": \"2024-01-15T00:00:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/empleados",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["empleados"]
            }
          },
          "response": []
        },
        {
          "name": "Actualizar empleado",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"email\": \"juan.perez@example.com\",\n  \"cargo\": \"Desarrollador Senior\",\n  \"salario\": 70000,\n  \"fechaContratacion\": \"2024-01-15T00:00:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/empleados/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["empleados", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Eliminar empleado",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/empleados/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["empleados", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
